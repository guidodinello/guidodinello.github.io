{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "resources/"],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-unused-vars": "error",
    "no-undef": "error",
    "space-before-function-paren": ["error", "never"],
    "arrow-spacing": "error",
    "no-alert": "error",
    "no-eval": "error",
    "no-debugger": "error",
    "no-unused-expressions": "error",
    "no-mixed-operators": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "error",
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "curly": ["error", "all"],
    "no-console": "warn",
    "max-len": ["warn", { "code": 80 }]
  }
}
